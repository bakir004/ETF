@model ooadepazar.Models.Narudzba

@{
    ViewData["Title"] = "Potvrdi narudžbu";
    var user = ViewBag.Korisnik as ooadepazar.Models.ApplicationUser;
    var kurirskeSluzbe = ViewBag.KurirskeSluzbe as List<SelectListItem>;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Potvrda narudžbe</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <input type="hidden" name="id" value="@ViewBag.ArtikalId" />

                        <div class="mb-3">
                            <label class="form-label">Ime</label>
                            <input type="text" class="form-control" value="@user?.Ime" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Prezime</label>
                            <input type="text" class="form-control" value="@user?.Prezime" readonly />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Broj telefona</label>
                            <input type="text" class="form-control" value="@user?.BrojTelefona" readonly />
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Lokacija isporuke</label>
                            <input type="text" name="Lokacija" class="form-control" required placeholder="Unesite adresu za isporuku" />
                        </div>

                        
                        @* Dodaj izbor kurirske službe *@
                        <div class="mb-4">
                            <label for="KurirskaSluzbaId" class="form-label">Izaberite kurirsku službu</label>
                            <select class="form-select" name="KurirskaSluzbaId" id="KurirskaSluzbaId" required>
                                <option value="" disabled selected>Odaberite kurirsku službu</option>
                                @if (kurirskeSluzbe != null)
                                {
                                    foreach (var kurir in kurirskeSluzbe)
                                    {
                                        <option value="@kurir.Value">@kurir.Text</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-block">✅ Potvrdi narudžbu</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted text-center small">
                    Provjerite podatke prije potvrde
                </div>
            </div>
        </div>
    </div>
</div>