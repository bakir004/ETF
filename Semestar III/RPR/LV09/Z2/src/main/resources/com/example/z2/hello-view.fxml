<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.z2.controller.PredmetController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER_LEFT">
        <Label text="Predmeti:"/>
    </HBox>
    <ListView fx:id="predmetiListView" prefHeight="200.0" prefWidth="300.0"/>

    <VBox spacing="5">
        <Label text="Naziv predmeta:"/>
        <TextField fx:id="nazivInput" promptText="Unesite naziv predmeta"/>
        <Label text="ECTS predmeta:"/>
        <TextField fx:id="ectsInput" promptText="Unesite ECTS predmeta"/>
        <Label fx:id="responseText"/>
        <HBox alignment="CENTER_RIGHT">
            <Button styleClass="button" text="Dodaj predmet" onAction="#onDodajPredmet"/>
        </HBox>
    </VBox>
</VBox>
